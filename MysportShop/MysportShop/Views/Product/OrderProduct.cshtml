@model MysportShop.Models.MyOrder

@{
    ViewData["Title"] = "OrderProduct";
}

<h2>OrderProduct</h2>
<div class="container">
    <form asp-action="OrderProduct" method="post">
        <div class="form-group">
            <label>Name</label>
            <input  name="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input  name="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Buy Product" />
        </div>
    </form>
</div>

