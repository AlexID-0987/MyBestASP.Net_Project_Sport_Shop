@model MysportShop.Models.CartIndexViewModel
@{
    ViewData["Title"] = "MySessionList";
}

<h2>MySessionList</h2>
<div class="container">

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Info</th>
                <th>Price</th>
                <th>Categories</th>
                <td>Quantity</td>
                <td>Summa</td>
                <td>Remove</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var listIt in Model.BuyUseSession.BuyProducts)
            {
                <tr>
                    <td>@listIt.Id</td>
                    <td>@listIt.NameProduct</td>
                    <td>@listIt.InfoWithProduct</td>
                    <td>@listIt.Price.ToString("c")</td>
                    <td>@listIt.Categories</td>
                    <td>@listIt.Quantity</td>
                    <td>@listIt.SummaOnsetProduct.ToString("c")</td>
                    <td>
                       <a href="~/Product/RemoveElement/@listIt.Id">Remove</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    
    <a href="List">List</a>
</div>
<div style="text-align:center">
    <h1>Total summa:</h1>
    <h1>@Model.BuyUseSession.TotalValue().ToString("c")</h1>
</div>