@model IEnumerable<MysportShop.Models.MyProduct>

@{
    ViewData["Title"] = "ChoiceProduct";
}

<h2>ChoiceProduct</h2>
<h1>@ViewBag.My</h1>
<div class="container">

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Info</th>
                <th>Price</th>
                <th>Categories</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var listIt in Model)
            {
                <tr>
                    <td>@listIt.Id</td>
                    <td>@listIt.NameProduct</td>
                    <td>@listIt.InfoWithProduct</td>
                    <td>@listIt.Price.ToString("c")</td>
                    <td>@listIt.Categories</td>
                </tr>
            }

        </tbody>
        
        
    </table>
    <h1>@ViewBag.Count</h1>
    <a href="List">List</a>
</div>
    
    