@model IEnumerable<MyProduct>

<h2>List</h2>


<div class="container">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Info</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listItem in Model)
            {
                <tr>
                    <td>@listItem.Id</td>
                    <td>@listItem.NameProduct</td>
                    <td>@listItem.InfoWithProduct</td>
                    <td>@listItem.Price.ToString("c")</td>
                </tr>
            }
        </tbody>
    </table>
    </div>