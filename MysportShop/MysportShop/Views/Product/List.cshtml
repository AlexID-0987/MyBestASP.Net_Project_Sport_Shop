
@model IEnumerable<MysportShop.Models.MyProduct>


@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h2>List</h2>
@{
    ViewData["Title"] = "List";
}
 <div>
     <h1>@ViewBag.Categ</h1>
 </div>
<form asp-action="ChoiceProduct" asp-controller="Product" method="post">
    <div>
<label>Choice</label>
    <select name="sel">
        <option value="">Choice</option>
        <option value="Sport">Sport</option>
        <option value="Nature">Nature</option>
    </select>
        </div>
    <div>
        <input type="submit" value="Send" class="btn btn-success"/>
    </div>
</form>
<div class="container">

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Info</th>
                <th>Price</th>
                <th>Categories</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var listIt in Model)
            {
                <tr>
                    <td>@listIt.Id</td>
                    <td>@listIt.NameProduct</td>
                    <td>@listIt.InfoWithProduct</td>
                    <td>@listIt.Price.ToString("c")</td>
                    <td>@listIt.Categories</td>
                </tr>
            }

        </tbody>
        @if (ViewBag.Page1.Increment)
        {
            <a asp-action="List" asp-route-page="@(ViewBag.Page1.PageNumber-1)" class="btn btn-success">Decrement</a>
        }
        @if (ViewBag.Page1.Decrement)
        {
            <a asp-action="List" asp-route-page="@(ViewBag.Page1.PageNumber+1)" class="btn btn-success">Increment</a>
        }
        
    </table>
    <h1>@ViewBag.PageNumber</h1>
    <a href="Product/Index">Index</a>
</div>
